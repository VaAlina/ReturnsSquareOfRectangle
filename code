1.1 Больше методов.
==========================================
package toString;

import java.util.*;

public class RectangleTest {
public static void main(String[] args){
	Rectangle d = new Rectangle();
	Scanner scanner = new Scanner(System.in);
	d.showHW();
	d.height = scanner.nextInt();
	d.width = scanner.nextInt();
	d.displayResult();
}
}

package toString;

import java.util.Scanner;

public class Rectangle {
	int width, height;
	
	void displayResult(){
		int res = width * height;
		System.out.print("Площадь вашего прямоугольника равна "+ res);
	}
    void showHW(){
    	System.out.println("Введите высоту прямоугольника.");
    	System.out.println("Введите ширину прямоугольника.");
    }
}






1.0
==========================================

package toString;

public class Rectangle {
	int width, height;
	
	void displayResult(){
		int res = width * height;
		System.out.print("Площадь вашего прямоугольника равна "+ res);
	}

}
package toString;

import java.util.*;

public class RectangleTest {
public static void main(String[] args){
	Rectangle d = new Rectangle();
	Scanner scanner = new Scanner(System.in);
	System.out.println("Введите высоту прямоугольника.");
	d.height = scanner.nextInt();
	System.out.println("Введите ширину прямоугольника.");
	d.width = scanner.nextInt();
	d.displayResult();
}
}
